{
  "kind": "collectionType",
  "collectionName": "movies",
  "info": {
    "singularName": "movie",
    "pluralName": "movies",
    "displayName": "Movie"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "genre": {
      "type": "enumeration",
      "enum": [
        "Action",
        "Drama",
        "Romance",
        "Comedy",
        "Horror"
      ]
    },
    "releaseDate": {
      "type": "date"
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "text"
    },
    "reviewer": {
      "type": "string"
    },
    "rating": {
      "type": "integer"
    },
    "comment": {
      "type": "text"
    }
  }
}
